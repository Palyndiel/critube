{# src/MM/MainBundle/Resources/views/Article/edit.html.twig #}

{% extends "MMMainBundle::layout.html.twig" %}

{% block title %}
  Modifier un article - {{ parent() }}
{% endblock %}

{% block mmmain_body %}

  <h2>Modifier un article</h2>

  {{ include("MMMainBundle:Article:form.html.twig") }}

  <p>
    Vous éditez un article déjà existant, merci de ne pas changer
    l'esprit générale de l'article déjà publié.
  </p>

  <p>
    <a href="{{ path('mm_main_view', {'id': article.id}) }}" class="btn btn-default">
      <i class="glyphicon glyphicon-chevron-left"></i>
      Retour à l'article
    </a>
  </p>

{% endblock %}
